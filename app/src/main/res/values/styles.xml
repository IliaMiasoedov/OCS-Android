<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/secondary_text_dark</item>
        <item name="colorAccent">@android:color/secondary_text_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="snackbarStyle">@style/SnackBarStyle</item>
    </style>
    
    <style name="SnackBarStyle" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="DescTextViewStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColorLink">@android:color/holo_blue_light</item>
    </style>

</resources>
